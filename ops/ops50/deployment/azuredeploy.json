{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"servicePrincipalId": {
			"type": "string",
			"metadata": {
				"description": "The service principle application id is used when deploying the Azure Kubernetes Service cluster."
			}
		},
		"servicePrincipalSecret": {
			"type": "securestring",
			"metadata": {
				"description": "The service principle password is used when deploying the Azure Kubernetes Service cluster."
			}
		},
		"azureDevOpsOrgName": {
			"type": "string",
			"metadata": {
				"description": "The service principle password is used when deploying the Azure Kubernetes Service cluster."
			}
		},
		"emailAddress": {
			"type": "string",
			"metadata": {
				"description": "The email address that will be used for work items assignment in Azure Boards."
			}
		}
	},
	"variables": {
		"aciName": "bootstrap-container",
		"rgname": "[resourceGroup().name]",
		"bootstrapRoleAssignmentId": "[guid(concat(resourceGroup().id, 'contributor'))]",
		"identityName": "bootstrap-creds",
		"contributorRoleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
		"containerName": "logs",
		"deploymentImage": "neilpeterson/itt-bootstrap:2.0",
		"sourceRepo": "https://github.com/microsoft/ignite-learning-paths.git",
		"entrypoint": "/ops/deployment/deploy.sh",
		"statusPageName": "[concat('status-',uniqueString(resourceGroup().id))]"
	},
	"resources": [
        {
			"name": "linkedTemplateQueue",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/microsoft/ignite-learning-paths/master/ops/ops50/deployment/azuredeploy-queue.json"
				},
				"parameters": {
					"azureDevOpsOrgName": {
						"value": "[parameters('azureDevOpsOrgName')]"
					},
					"azureDevOpsProject": {
						"value": "[parameters('azureDevOpsOrgName')]"
					}
				}
			}
		},
		{
			"name": "linkedTemplateScaleset",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
            "dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'linkedTemplateQueue')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/microsoft/ignite-learning-paths/master/ops/ops50/deployment/azuredeploy-scaleset.json"
				},
				"parameters": {
					"servicePrincipalId": {
						"value": "[parameters('servicePrincipalId')]"
					},
					"servicePrincipalSecret": {
						"value": "[parameters('servicePrincipalSecret')]"
					}
				}
			}
		},
        {
			"name": "linkedTemplateCosmos",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
            "properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/microsoft/ignite-learning-paths/master/ops/ops50/deployment/azuredeploy-cosmos.json"
				},
				"parameters": {
					"servicePrincipalId": {
						"value": "[parameters('servicePrincipalId')]"
					},
					"servicePrincipalSecret": {
						"value": "[parameters('servicePrincipalSecret')]"
					}
				}
			}
		},
        {
			"name": "linkedTemplateWebApps",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/microsoft/ignite-learning-paths/master/ops/ops50/deployment/azuredeploy-webapps.json"
				},
				"parameters": {
					"servicePrincipalId": {
						"value": "[parameters('servicePrincipalId')]"
					},
					"servicePrincipalSecret": {
						"value": "[parameters('servicePrincipalSecret')]"
					}
				}
			}
		},
        {
			"name": "linkedTemplateFrontdoor",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
            "dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'linkedTemplateQueue')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/microsoft/ignite-learning-paths/master/ops/ops50/deployment/azuredeploy-frontdoor.json"
				},
				"parameters": {
					"servicePrincipalId": {
						"value": "[parameters('servicePrincipalId')]"
					},
					"servicePrincipalSecret": {
						"value": "[parameters('servicePrincipalSecret')]"
					}
				}
			}
		},
		{
			"name": "linkedTemplateLogicApps",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-05-01",
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'linkedTemplateCosmos')]"			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/microsoft/ignite-learning-paths/master/ops/ops50/deployment/azuredeploy-logicapps.json"
				},
				"parameters": {
					"azureDevOpsOrgName": {
						"value": "[parameters('azureDevOpsOrgName')]"
					},
					"azureDevOpsProject": {
						"value": "[parameters('azureDevOpsOrgName')]"
					},
					"databaseName": {
						"value": "[reference('linkedTemplateCosmos').outputs.databaseName.value]"
					}
				}
			}
		}
	],
	"outputs": {}
}